{% extends 'admin/layout.html.twig' %}
{% block title %}Tous les produits{% endblock title %}

{% block admin_content %}
    <header class="mb-4">
        <h1>Produits</h1>
    </header>


    <table class="table table-hover">
        <thead class="thead-responsive">
            <tr class="row">
                <th class="col-md">Produit</th>
                <th class="col-md">Catégorie</th>
                <th class="col-md">Quantity</th>
            </tr>
        </thead>
        {% if products|length > 0 %}
            {% for product in products %}
                <tr class="row tr-link" data-href="{{ path('admin_product-editor', {'id': product.id }) }}">
                    <td class="col-md">
                        <div class="row">
                           
                            <div class="col-md">
                                {{ product.name }}
                            </div>
                        </div>
                    </td>
                    <td class="col-md">{{ product.category }}</td>
                    <td class="col-md">{{ product.quantity }}</td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td>Aucun résultat</td>
            </tr>
        {% endif %}
    </table>
    
   

{% endblock %}

{% block javascripts %}
    <script src="/js/allProducts.js"></script>
{% endblock %}
